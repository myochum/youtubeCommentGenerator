{
    "name": "Random Youtube Comment Generator",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "Generate a random comment when on a youtube video.",
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    },
    "default_locale": "en",
    "background": {
        "scripts": ["js/jquery-3.1.0.min.js", "src/bg/background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "browser action demo",
        "default_popup": "src/browser_action/browser_action.html"
    },
    "permissions": [
        "tabs",
        "*://*.youtube.com/*"
    ],
    "content_scripts": [{
        "matches": [
            "*://*.youtube.com/*"
        ],
        "js": [
            "js/jquery-3.1.0.min.js",
            "src/inject/inject.js"
        ]
    }]
}